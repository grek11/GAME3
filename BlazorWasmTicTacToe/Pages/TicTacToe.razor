@page "/"
@using BlazorWasmTicTacToe.Models;



@code {
    GameBoard board = new GameBoard();
}


@if (!board.GameComplete)
{
    <h2>Хід @board.CurrentTurn!</h2>
}
else
{
    <h2>@board.GetGameCompleteMessage() <button class="btn btn-success" @onclick="@(() => board.Reset())">Заново</button></h2>
}

<div class="board">
    @for (int i = 0; i < 3; i++)
    {
        <div class="column">
            @for (int j = 0; j < 3; j++)
            {
                int x = i;
                int y = j;
                <div class="gamepiece
                         @board.Board[i,j].Style.ToString().ToLower()" @onclick="@(() => board.PieceClicked(x,y))"
                     style="@(board.IsGamePieceAWinningPiece(i, j)? "opacity: 0.6" : "")"></div>
            }
        </div>
    }
</div>

